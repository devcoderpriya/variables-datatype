#include <stdio.h>

int main() 
{
    float a;
    printf("enter the 1st number");
    scanf("%f",&a);
    float b;
    printf("enter the 2st number");
    scanf("%f",&b);
    float c;
     printf("enter the 3rd number");
    scanf("%f",&c);
    float sum=a+b+c;
     printf("%f",sum);
     float average=sum/3;
     printf("%f",average);

    return 0;
}
